<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Offers
                <small>Subscribe and Save</small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <li class="active">Our Offers</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h3 class="panel-title">Basic Package</h3>
                </div>
                <div class="panel-body">
                    <span class="price"><sup>€</sup>49<sup>99</sup></span>
                    <span class="period">per month</span>
                </div>
                <ul class="list-group">
                    <li class="list-group-item"><strong>1</strong> Member</li>
                    <li class="list-group-item"><strong>5</strong> Visits</li>
                    <li class="list-group-item"><strong>Unlimited</strong> Games</li>
                    <li class="list-group-item"><strong>3</strong> Bar Vouchers</li>
                    <li class="list-group-item"><strong>2</strong> Restaurant Vouchers</li>
                    <% if user_signed_in? %>
                      <li class="list-group-item"><a href="/users/sign_up" class="btn btn-primary">Buy Now</a>
                    <% else %>
                      <li class="list-group-item"><a href="/users/sign_up" class="btn btn-primary">Sign Up!</a>
                    <% end %>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary text-center">
                <div class="panel-heading">
                    <h3 class="panel-title">Plus <span class="label label-success">Best Value</span></h3>
                </div>
                <div class="panel-body">
                    <span class="price"><sup>€</sup>89<sup>99</sup></span>
                    <span class="period">per month</span>
                </div>
                <ul class="list-group">
                    <li class="list-group-item"><strong>1</strong> Member <strong>1</strong> Guest</li>
                    <li class="list-group-item"><strong>8</strong> Visits</li>
                    <li class="list-group-item"><strong>Unlimited</strong> Games</li>
                    <li class="list-group-item"><strong>10</strong> Bar Vouchers</li>
                    <li class="list-group-item"><strong>6</strong> Restaurant Vouchers</li>
                    <% if user_signed_in? %>
                      <li class="list-group-item"><a href="/users/sign_up" class="btn btn-primary">Buy Now</a>
                    <% else %>
                      <li class="list-group-item"><a href="/users/sign_up" class="btn btn-primary">Sign Up!</a>
                    <% end %>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h3 class="panel-title">Ultra</h3>
                </div>
                <div class="panel-body">
                    <span class="price"><sup>€</sup>249<sup>99</sup></span>
                    <span class="period">per month</span>
                </div>
                <ul class="list-group">
                    <li class="list-group-item"><strong>1</strong> <strong style="color:red;"> VIP</strong> Member <strong>3</strong> Guests</li>
                    <li class="list-group-item"><strong>20</strong> Visits and access to VIP areas</li>
                    <li class="list-group-item"><strong>Unlimited</strong> Games</li>
                    <li class="list-group-item"><strong>80</strong> Bar Vouchers</li>
                    <li class="list-group-item"><strong>80</strong> Restaurant Vouchers</li>
                    <% if user_signed_in? %>
                      <li class="list-group-item"><a href="/users/sign_up" class="btn btn-primary">Buy Now</a>
                    <% else %>
                      <li class="list-group-item"><a href="/users/sign_up" class="btn btn-primary">Sign Up!</a>
                    <% end %>
                    
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
