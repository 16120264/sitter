<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">

<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">All Zones 
                <small>isn't this exciting</small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <li class="active">Zones</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <div style="margin-left:5%">
        
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Zone name</th>
            <th>Zone Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @zones.each do |zone| %>
            <tr>
              <td><%= zone.name %></td>
              <td><%= zone.desc %></td>
              <td><%= link_to 'Edit', edit_zone_path(zone), :class => 'btn btn-warning' %></td>
              <td><%= link_to 'Remove', zone, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
              <td><a href="zones/<%= zone.id %>/bookings" class="btn btn-primary">Check Bookings</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
    </div>
    <br><br>
    <ol class="breadcrumb">
        <li><%= link_to 'New Zone', new_zone_path %></li>
    </ol>
</div>