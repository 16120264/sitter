<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12" >
            <% if current_user.try(:admin?) %>
                <h1 class="page-header text-center">Client Listing 
                <small>busy, busy, busy</small>
            <% else %>
                <h1 class="page-header text-center">Available Sitters 
                <small>go on, you need a night out!</small>
            <% end %>           
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <% if current_user.try(:admin?) %>
                    <li class="active">All site users </li>
                <% else %>
                    <li class="active">Available sitters for <%= current_user.name %></li>
                <% end %> 
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <div style="margin-left:5%">
      <table class="table table-bordered table-striped">
        <tbody>
          <% @users.order(:name).each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
