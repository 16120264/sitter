<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12" >
            <h1 class="page-header text-center">Bookings for the <%= @zone.name %> Zone
                <small>can't wait to see you</small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <li class="active">Bookings for <%= current_user.name %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <div style="margin-left:5%">
        
        
        <table class="table table-bordered table-striped">
            <tr>
                <th>Arrival Date</th>
                <th>Time Slot</th> 
                <th>Price in â‚¬</th>
                <th>Add Ons</th>
            </tr>
            <% for booking in @bookings %>
                <tr>
                    <td><%= booking.date %></td>
                    <td><%= booking.timeslot %></td>
                    <% if (booking.user_id == current_user.id || current_user.try(:admin?)) %>
                        <td><%= booking.price %></td>
                        <td><%= booking.add_on %></td>
                    <% end %>
                    <% if booking.user_id == current_user.id %>
                        <td><a href="#" class="btn btn-success">Your Bookings</a></td>
                    <% end %>                    
                    <% if (booking.user_id == current_user.id || current_user.try(:admin?)) && booking.date >= Date.today %>
                        <td><%= link_to ' Edit ', edit_zone_booking_path(@zone, booking), :class => 'btn btn-warning' %></td> 
                        <td><%= link_to ' Remove ', zone_booking_path(@zone, booking), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
                    <% end %>
                </tr>
            <% end %>
        </table>

    </div>
    <br><br>
    <ol class="breadcrumb">
        <li><%= link_to 'New booking', new_zone_booking_path(@zone) %></li>
        <li><%= link_to 'Home', root_path %>
    </ol>
</div>