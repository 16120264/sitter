<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">

<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">Bookings for <%= @user.name %>
                <small>bet you can't wait !</small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <li class="active">Update Booking</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <div style="margin-left:35%">
        
        <p>
            <b> Booking details:</b>
            <% if (@booking.user_id == current_user.id) %>
                <%= @booking.date %>
                <%= @booking.timeslot %>
                <%= @booking.price %>
                <%= @booking.add_on %>   
            <% end %>
        </p>

    </div>
    <br><br>
    <ol class="breadcrumb">
        <li><%= link_to 'Edit', edit_user_booking_path(@user, @booking) %></li>
        <li><%= link_to 'Back', user_bookings_path(@user) %></li>
    </ol>    
</div>